@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = "/Areas/Identity/Pages/_AuthLayout.cshtml";
}
<style>
    body {
        background-color: lightblue;
    }
</style>
<h1 style="font-size: 40px; color: dodgerblue; text-align: center; margin-top: 2vw">@ViewData["Title"] Page</h1>
    <div class="col-md-10 offset-md-1">
        <section>
            <div class="login-form-icon">
                <i class="fas fa-user-circle fa-9x text-secondary"></i>
            </div>

            <form id="account" method="post" style=" padding: 4vw">
                
                
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" placeholder="..."/>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password" ></label>
                    <input size="40" asp-for="Input.Password" class="form-control" placeholder="..." />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-info btn-block">Log in</button>
                </div>
            </form>
        </section>
    </div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
